<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>구구단</title>
   
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <script>

        $(document).ready(function() {
            let setting = "";

            setting += "<option>" + "숫자를 선택해주세요" + "</option>";

            for( let s = 1;s <= 9; s++) {
            setting += "<option value=" + s + " >" + s + "</option>";
            }

            $("#frontNumber").html(setting);
            $("#backNumber").html(setting);


            $("#play").click(function() {
                const front = $("#frontNumber").val();
                const back  = $("#backNumber").val();

                let table = "";

                table += "<table border>";
                    for(let i = 1; i<=front; i++) {
                table += "<th>" + i + "단" + "</th>";    
                    }
                table += "<tr>";
                    for(let j = 1; j <= back; j++) {
                        for(let i = 1; i<=front; i++) {
                table += "<td>" + i + "*" + j + "=" + i * j + "</td>";    
                        }
                table += "</tr>";
                }
                table += "</table>"

                $("#result").html(table);
            });
        });

    </script>

</head> 
<body>

    <select id="frontNumber"></select>
    <select id="backNumber" ></select> 

    <button id="play" >실행</button>

    <div id="result"></div>

</body>
</html>
