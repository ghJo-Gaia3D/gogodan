<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>구구단</title>


    <script>
        var front 
        var back  

        function play(){
           
            front = document.getElementById("frontNumber").value;
            back = document.getElementById("backNumber").value;


            document.write("<table border>");
            document.write("<tr>");
            for(let i = 1; i<=front-1; i++) {
                document.write("<th>" + i + "단</th>");    
            }
            document.write("<th>" + front + "단</th>");
            document.write("</tr>");

            document.write("<tr>");

            if (back == 9) {
                for(let j = 1; j <= 9; j++) {
                    for(let i = 1; i<=front; i++) {
                        document.write("<td>" + i + "*" + j + "=" + i * j + "</td>");    
                    }
                    document.write("</tr>");
                }

            } else  {
                for(let j = 1; j <= 9; j++) {
                    for(let i = 1; i<= front-1; i++) {
                        document.write("<td>" + i + "*" + j + "=" + i * j + "</td>");    
                    }
                    document.write("</tr>");
                }
        
                for(let j = 1; j <= back; j++) {
                    
                    document.write("<td>" + front + "*" + j + "=" + front * j + "</td>");    

                    document.write("</tr>");
                    
                }
            }

            document.write("</table>");
            document.write("<hr>");
        }
    </script>


</head> 

<body>

    <select id="frontNumber" >
        <option>숫자를 선택해주세요</option>
        <script>
            for( let i = 1; i <= 9; i++) {
                document.write("<option value='" + i + "' >" + i + "</option>" )
            }
        </script>
    </select>

    <select id="backNumber" >
        <option>숫자를 선택해주세요</option>
        <script>
            for( let i = 1; i <= 9; i++) {
                document.write("<option value='" + i + "' >" + i + "</option>" )
            }
        </script>
    </select>


    <input type="button" value="실행" onclick="play()"/>



</body>
</html>
